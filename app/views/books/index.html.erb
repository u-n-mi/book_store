<div class="row">
  <% @books.each do |book| %>
  <div class="col">
    <div class="card" style="width: 18rem;">
      <%= cl_image_tag book.photo.key, class: "card-img-top" %>
      <div class="card-body">
        <h5 class="card-title"><%= book.title %></h5>
        <p class="card-text"><%= book.author %></p>
        <p class="card-text"><%= book.genre %></p>
        <p class="card-text"><%= book.price %> $</p>
        <%= link_to "See More", book_path(book), class: "btn btn-primary"  %>
      </div>
    </div>
  </div>
  <% end %>
</div>

<hr>
