<div class="card-group">
 <% @books.each do |book| %>
  <div class="card">
    <img class="card-img-top" src="https://lewagon.masscom.media/assets/images/hero-bg.jpg" alt="Card image cap">
    <div class="card-body">
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= book.author %></li>i
        <li class="list-group-item"><%= book.title %></li>
        <li class="list-group-item"><%= book.genre %></li>
        <li class="list-group-item"><%= book.price %></li>
      </ul>
    </div>
    <div class="btn-group" role="group" aria-label="Basic example">
      <button type="button" class="btn btn-secondary"><a href="<%= books_order_path %>">Buy</a></button>
      <button type="button" class="btn btn-secondary">Description</button>
    </div>
  </div>
  <% end %>
</div>
